{
  "manifest_version": 3,
  "name": "ReConsider",
  "version": "1.0",
  "description": "ReConsider before visiting certain websites",
  "permissions": ["storage", "webNavigation"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
